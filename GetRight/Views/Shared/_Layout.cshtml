<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GetRight</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top link">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GetRight", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!-- Authenticated User Pages -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Admin Tools", "AdminTools", "Home", null, new { @class = "link" })</li>
                            <li>@Html.ActionLink("Appointments", "index", "Appointments", null, new { @class = "link" })</li>
                            <li>@Html.ActionLink("Trainer Management", "index", "Trainers", null, new { @class = "link" })</li>
                        }

                        if (User.IsInRole("Dieter"))
                        {
                            <li>@Html.ActionLink("Nutrition Management", "index", "MealLists", null, new { @class = "link" })</li>
                            <li>@Html.ActionLink("Appointments", "index", "Appointments", null, new { @class = "link" })</li>
                            <li>@Html.ActionLink("See Our Trainers", "index", "Trainers", null, new { @class = "link" })</li>
                        }
                        if (User.IsInRole("Trainer"))
                        {
                            <li>@Html.ActionLink("Trainer Details", "index", "Trainers", null, new { @class = "link" })</li>
                            <li>@Html.ActionLink("Appointments", "index", "Appointments", null, new { @class = "link" })</li>
                        }
                    }
                    <li>@Html.ActionLink("Gyms", "index", "Gyms", null, new { @class = "link" })</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GetRight Health</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</body>
</html>
